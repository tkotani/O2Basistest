#!/bin/csh
### You can use this sample to do successive calculation with different lattice constant alat.
### Try "csh ctrl.li", and check save.li.
set nk = 1
#set pwemax = 3
#foreach pwemax (1 2 3 4 6 8 10 12)
set dis=0
lmfa o2 -vnk=$nk -vdis=$dis > out_lmfa
foreach dis (-0.25 -0.20 -0.15 -0.1 -0.05 -0.025 0 0.025 0.05 0.1 0.15 0.2 0.25 0.30 0.35 )
lmf --rs=1,1,1,0,0 o2 -vnk=$nk -vdis=$dis >out_dis${dis}_nk${nk}
#cp rst.o2 rst.o2.out_dis${dis}_nk${nk}
#end
end
exit

